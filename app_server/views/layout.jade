doctype html
html(ng-app='myApp')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar").navbar-toggle.collapsed
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Web Noticias
        #navbar.navbar-collapse.collapse
          .navbar-right
            //- aqui viene codigo variable por usuario
            a.navbar-brand(href="/login") Usuario 
              span.glyphicon.glyphicon-user
            //- codigo end
          .navbar-form.navbar-right
            .input-group
              input(type="text" placeholder="Buscar").form-control
              .input-group-btn
                button(type="submit").btn.btn-defaul 
                  span.glyphicon.glyphicon-search
          .navbar-left
            ul.nav.navbar-nav
              li: a(href="/") Inicio
              li: a(href="/politica") Politica
              li: a(href="/deportes") Deportes
              li: a(href="/farandula") Farandula
              li: a(href="/social") Social
          .navbar-left
            ul.nav.navbar-nav
              li: a(href="/about") About
    .container
      div(ng-view)
      //-block content
      
      footer
        .row
          .col-xs-12
            small &copy; Simon Holmes 2014

    script(src='/javascripts/angular.min.js')
    script(src='/javascripts/angular-route.min.js')
    script(src='/javascripts/MyApp.js')
    script(src='/javascripts/jquery-3.1.1.min.js')
    script(src='/javascripts/bootstrap.min.js')
