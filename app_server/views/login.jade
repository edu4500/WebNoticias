extends layout
block content
  .container
    form(action="#" method="post").form-signin
      h2.form-signin-heading Login
      input(type="text" placeholder="User" name="usuario").form-control#name.sup
      input(type="password" placeholder="Password" name="pass").form-control#edad.inf
      button(type="submit").btn.btn-success.btn-block Ingresar
      br 
      h5 Si no tienes una cuenta registrate
      a(href="/register").btn.btn-primary.btn-block Registrate
